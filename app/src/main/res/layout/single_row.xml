<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:cardview="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/view_margin">

  <android.support.v7.widget.CardView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    cardview:cardCornerRadius="5dp"
    cardview:cardElevation="4dp">


    <RelativeLayout
      android:id="@+id/relativeLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/image_size"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:maxHeight="@dimen/image_max_size"
        android:padding="@dimen/view_padding"
        android:src="@android:drawable/star_big_off"/>

      <TextView
        android:id="@+id/titleTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:text="Name of the product"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="22sp"/>

      <TextView
        android:id="@+id/priceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTV"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toLeftOf="@+id/ratingTV"
        android:layout_toRightOf="@+id/imageView"
        android:text="Rs. 12,222"
        android:textColor="@android:color/black"
        android:textSize="14sp"/>

      <TextView
        android:id="@+id/storeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/priceTV"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:text="8 stores"
        android:textSize="14sp"/>

      <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/storeTV"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:text="......"/>

      <TextView
        android:id="@+id/ratingTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/priceTV"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@android:color/holo_green_dark"
        android:padding="@dimen/view_padding"
        android:text="8.2"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"/>

      <TextView
        android:id="@+id/votesTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ratingTV"
        android:layout_marginRight="@dimen/view_margin"
        android:text="81 votes"
        android:textSize="14sp"/>


    </RelativeLayout>

  </android.support.v7.widget.CardView>


</RelativeLayout>
